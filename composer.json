{
    "name": "auron-consulting-oss/php-console-logger",
    "description": "Simple PSR-3 compliant console logger for PHP",
    "type" : "library",
    "keywords": ["php", "console", "terminal", "log", "logger", "loggerinterface", "logger interface", "psr3", "psr-3", "psr 3"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Luis Pabon",
            "email": "luis.pabon@auronconsulting.co.uk",
            "role": "developer"
        }
    ],

    "autoload": {
        "psr-4": {
            "AuronConsultingOSS\\Logger\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "AuronConsultingOSS\\Logger\\Tests\\": "tests/"
        }
    },

    "require": {
        "php":     ">=7.3.0",
        "ext-json":  "*",
        "psr/log": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "infection/infection": "^0.21.5"
    }
}
